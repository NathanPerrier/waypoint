        window.open(app.FEEDBACK_URL, '_blank').focus();
        sessionStorage.setItem('hasTakenSurvey', 'true'); 
      });
    }
      
    var swiper = app.swiper.create('.swiper', {
      speed: 200,
      spaceBetween: -200,
      loop: true,
      parallax: true,
      slidesPerView: 1.5,
      centeredSlides: true,
      windowWidth: 768,
    });    
  });

  

  return $render;
}
